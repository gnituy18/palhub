{
  "name": "palhub",
  "version": "1.0.0",
  "description": "A chat application",
  "main": "server.js",
  "scripts": {
    "start": "npm run build && npm run watch & npm run redis",
    "watch": "npm run watch-server & npm run watch-js",
    "watch-server": "nodemon server.js",
    "watch-js": "watchify app/assets/js/main.js -o public/js/bundle.js",
    "build": "cp node_modules/webrtc-adapter/out/adapter.js public/js/adapter.js",
    "redis": "redis-server"
  },
  "keywords": [
    "chat"
  ],
  "author": "Charlie Hsu",
  "license": "ISC",
  "dependencies": {
    "jquery": "^3.0.0",
    "koa": "^1.2.0",
    "koa-bodyparser": "^2.2.0",
    "koa-json": "^1.1.3",
    "koa-logger": "^1.3.0",
    "koa-onerror": "^1.3.1",
    "koa-router": "^5.4.0",
    "koa-session": "^3.3.1",
    "koa-static": "^2.0.0",
    "koa-views": "^4.1.0",
    "pug": "^2.0.0-beta3",
    "redis": "^2.6.2",
    "socket.io": "^1.4.8",
    "webrtc-adapter": "^1.4.0"
  },
  "devDependencies": {
    "gulp": "^3.9.1"
  }
}
