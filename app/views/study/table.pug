extends ./../layouts/master.pug

block content
  include ./../includes/_user.pug
  div.display-none
    span#tableid #{tableInfo.id}
    span#subject #{tableInfo.subject}
  div#pals.side-nav.text-align-left.bg-blue1
  div.side-nav-neighbor
    i.fa.fa-users.icon.side-nav-control
    i.fa.fa-microphone.icon
    i.fa.fa-info-circle.icon
    div.wrapper(style='min-height:100%')
      div.center
        div#content.section.text-align-center
          div#table-msg.cont.font-blue
            h1.font-blue 此桌的主題是...#{tableInfo.subject}
            h1.font-blue 討論時請保持友善的態度。
          div(style='height:600px;width:800px;display:inline-block;background-image:url(/img/boarddev.jpg);background-size:cover;')
  div#pal-audios
  audio#audio-user(autoplay muted="muted")
  script(src='/js/adapter.js')
  script(src='/js/'+app.page+'/table.js')
